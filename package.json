{
  "name": "shapka",
  "version": "1.0.0",
  "description": "A multiplayer web game",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "update": "npm update",
    "update:all": "npm update && cd client && npm update",
    "update:check": "npx npm-check-updates",
    "update:client": "cd client && npx npm-check-updates",
    "update:interactive": "npx npm-check-updates -u && cd client && npx npm-check-updates -u"
  },
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "concurrently": "^9.1.2"
  }
} 